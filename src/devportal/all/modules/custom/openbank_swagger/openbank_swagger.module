  $operations = array();
  /*if ($batch_weather != NULL) {
    $operations = array_merge($operations, $batch_weather['operations']);
  }
  if ($batch_pet != NULL) {
    $operations = array_merge($operations, $batch_pet['operations']);
  }*/
  if ($batch_oauth != NULL) {
